@foreach (var item in Model) {
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.UniName)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.UniDesc)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.UniLocation)
			</td>
			<td>
