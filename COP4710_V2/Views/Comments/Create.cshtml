@model COP4710_V2.Models.Comments

@{
    ViewData["Title"] = "Create";
}

<h2>@ViewBag.EventName</h2>

<h4>Comments</h4>
<hr />
<div class="row">
    <div class="col-md-4">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>

			<div class="form-group">
				<input asp-for="EventId" type="hidden" value="@ViewBag.EventId">
			</div>	

			<div class="form-group">
				<label asp-for="Text" class="control-label"></label>
				<textarea rows="3" asp-for="Text" class="form-control" placeholder="Insert Comment Here"> </textarea>
				<span asp-validation-for="Text" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Rating" class="control-label"></label>
				<input asp-for="Rating" class="form-control" placeholder="1-5 Stars" />
				<span asp-validation-for="Rating" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-default" />
			</div>
		</form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

