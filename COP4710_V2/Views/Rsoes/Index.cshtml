@model IEnumerable<COP4710_V2.Models.Rso>

@{
    ViewData["Title"] = "Index";
}

<h2>RSO's at @ViewBag.UniversityName </h2>

<p>
    <a asp-action="Create">Start your own! (Minimum 5 members)</a>
</p>


<table class="table">
    <thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.RsoId)
			</th>
			
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.RsoAdmin.AdminEmail)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.RsoUniversity)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.NumMembers)
			</th>
			<th></th>
		</tr>
    </thead>
    <tbody>

@foreach (var item in Model)
{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.RsoId)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Name)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.RsoAdmin.AdminEmail)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.RsoUniversity.UniName)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.NumMembers)
			</td>
			<td>
				<a asp-action="JoinRso" asp-route-id="@item.RsoId">Join Rso</a>

				<a asp-action="Edit" asp-route-id="@item.RsoId">Edit</a> |
				<a asp-action="Details" asp-route-id="@item.RsoId">Details</a> |
				<a asp-action="Delete" asp-route-id="@item.RsoId">Delete</a>
			</td>

		</tr>
}
    </tbody>
</table>
