@model IEnumerable<COP4710_V2.Models.Rso>

@{
	ViewData["Title"] = "Index";
}

<h2>All RSO's for Your University</h2>

<p>
	<a asp-action="Create">Start your own! (Minimum 5 members)</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.RsoAdmin.AdminEmail)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.RsoUniversity)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.NumMembers)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>

		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.RsoAdmin.AdminEmail)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.RsoUniversity.UniName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.NumMembers)
				</td>

			</tr>
		}
	</tbody>
</table>
